# AI Agent Configuration for Enguio Inventory System
# This file is automatically detected by AI coding assistants
# Version: 1.0.0

[rules]
# Critical rules that must never be violated
enforce_environment_variables = true
no_hardcoded_urls = true
no_hardcoded_credentials = true
verify_before_commit = true

[patterns.frontend]
# Frontend API call patterns (JavaScript/React)
api_base_url_env_var = "NEXT_PUBLIC_API_BASE_URL"
api_config_import = "app/lib/apiConfig.js"
api_handler_import = "app/lib/apiHandler.js"
api_hook_import = "app/hooks/useAPI.js"

[patterns.backend]
# Backend database connection patterns (PHP)
db_connection_file = "Api/conn.php"
env_loader_file = "simple_dotenv.php"
required_env_vars = ["DB_HOST", "DB_DATABASE", "DB_USER", "DB_PASS", "DB_CHARSET"]

[violations.detect]
# Patterns to detect and prevent
hardcoded_url_pattern = 'http://localhost/caps2e2/Api'
hardcoded_db_pattern = 'new mysqli\("localhost"'
hardcoded_pdo_pattern = 'new PDO\("mysql:host=localhost'

[enforcement.commands]
# Commands to verify compliance
verify_frontend = 'grep -r "http://localhost/caps2e2/Api" app/ --include="*.js" | grep -v "NEXT_PUBLIC_API_BASE_URL"'
verify_backend = 'grep -r "new mysqli\(\"localhost\"" Api/ --include="*.php"'
verify_all = './verify_env_implementation.sh'

[documentation]
# Reference documentation
quick_start = "START_HERE_ENV_SETUP.md"
complete_guide = "API_ENV_SETUP.md"
implementation_status = "ENV_IMPLEMENTATION_STATUS.md"
ai_rules = "AI_CODING_RULES.md"
cursor_rules = ".cursorrules"

[environment_files]
# Environment configuration files
frontend_env = ".env.local"
backend_env = ".env"
template = ".env.example"

[auto_fix]
# Automatic fixes for common violations
fix_hardcoded_urls = true
suggest_apiConfig_import = true
suggest_apiHandler_usage = true
suggest_conn_php_include = true

[metadata]
project_name = "Enguio Inventory System"
last_updated = "2025-10-09"
compliance_status = "enforced"
verification_passed = true
files_compliant = 70
hardcoded_urls_remaining = 0

